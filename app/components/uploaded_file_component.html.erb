<div data-controller="uploaded-file" class="cursor-pointer mt-8 mb-4 max-w-3xl bg-white border rounded-lg transition-all hover:shadow-lg">
    <div class="px-4 py-4">
      <div class="flex items-center">
        <span class="mx-4 h-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" /></svg>
        </span>
        
            <div class="flex-grow truncate">
                <div class="w-full sm:flex justify-between items-center mb-1">
                    <span class="text-normal leading-snug font-semibold text-gray-600 truncate sm:mb-0"><%= @name %></span>
                </div>
                <!-- Card body -->
                <div class="flex items-end whitespace-normal">
                    <div class="max-w-md text-sm text-gray-600 font-semibold">
                      <p class="mb-2"> <%= @file_type.upcase %> &middot; <%= @file_size %></p>
                    </div>
                    <!-- More link -->
                </div>
            </div> 
<div class="flex items-center">
                      <%= button_tag data: { "uploaded-file-target": "open", action:"click->uploaded-file#open"}, class:"mr-2 flex-shrink-0 flex items-center justify-center text-indigo-600 w-10 h-10 rounded-full bg-gradient-to-b from-indigo-50 to-indigo-100 hover:from-white hover:to-indigo-100 focus:outline-none focus-visible:from-white focus-visible:to-white transition duration-150 ml-2" do %> 
                        <span class="block font-bold"><span class="sr-only">OpenDialog</span>
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                          </svg>
                        </span>
                        <% end %>

                        <%= button_tag data: { "uploaded-file-target": "close", action:"click->uploaded-file#close"},  class:"hidden flex-shrink-0 flex items-center justify-center text-indigo-600 w-10 h-10 rounded-full bg-gradient-to-b from-indigo-50 to-indigo-100 hover:from-white hover:to-indigo-100 focus:outline-none focus-visible:from-white focus-visible:to-white transition duration-150 ml-2" do %>
                        <span class="block font-bold"><span class="sr-only">CloseDialog</span>
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="m4.5 15.75 7.5-7.5 7.5 7.5" /></svg>
                        </span>
                      <% end %>

                      <%= button_tag data: {"uploaded-file-target": "delete", action:"click->uploaded-file#delete"}, class:"flex-shrink-0 flex items-center justify-center text-indigo-600 w-10 h-10 rounded-full bg-gradient-to-b from-indigo-50 to-indigo-100 hover:from-white hover:to-indigo-100 focus:outline-none focus-visible:from-white focus-visible:to-white transition duration-150 ml-2" do %>
                        <span class="block font-bold"><span class="sr-only">Delete</span>
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                          </svg>
                        </span>
                      <% end %>

                    </div>

        </div>
    </div>
    <!-- Drop Down Options -->
    <div data-uploaded-file-target="form" class="hidden px-2 pb-4">
      <div class="gap-2">
        <%= label_tag :name, "Name", class:"block my-2" %>
        <%= text_field :name, {}, value: @name, class:"w-full border-2 rounded-md px-3 py-2 my-1 shadow-sm" %>
      </div>
      <div class="gap-2">
        <%= label_tag :description, "Description", class:"block my-2" %>
        <%= text_field :description, {}, value: @description, class:"w-full border-2 rounded-md px-3 py-2 my-1 shadow-sm" %>
      </div>
    </div>
</div>

