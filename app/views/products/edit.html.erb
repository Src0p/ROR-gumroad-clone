<div class="flex h-screen bg-gray-100">
  <%= render "shared/sidebar" %>
    <%= form_with model: @product, class: "flex flex-col flex-1" do |form| %>
      <div class="sticky top-0 bg-gray-200 p-12 border-b border-gray-700">

        <div class="w-full flex items-center justify-between">
          <span class="text-2xl tracking-wide text-slate-600 font-normal"><%= @product.name %></span>
          <div class="flex">
            <% if @product.publish?  %>
              <%= link_to "Unpublish", product_unpublish_path(@product), class: "px-2 py-1 text-blue-700 font-semibold", data: {"turbo-method": :put } %>
            <% else %>
              <%= link_to "Publish", product_publish_path(@product) , class:"px-2 py-1 text-blue-700 font-semibold", data: {"turbo-method": :put } %>
            <% end %>
            <%= form.submit "Save Changes", class:"hover:shadow-form cursor-pointer w-full rounded-md bg-[#6A64F1] py-1 px-3 text-center text-base font-semibold text-white outline-none" %>
          </div>
        </div>

        <div class="flex mt-10">
          <div class="">
            <%= link_to "Product", edit_product_path(@product), class:controller_name == "products" ? active_tab_class : inactive_tab_class %>
          </div>
          <div class="ml-4">
            <%= link_to "Content", product_contents_path(@product), class:controller_name == "contents" ? active_tab_class : inactive_tab_class  %>
          </div>
        </div>
      </div>
      <div>
        <div class="flex items-center justify-center">
          <div class="p-4 mx-auto w-full bg-white">
            <div class="py-4 px-9">

                  <div class="my-5">
                    <%= form.label :name, class:"mb-3 block text-base font-medium text-[#07074D]" %>
                    <%= form.text_field :name, class:"w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" %>
                  <div class="my-5">
                      <%= form.label :price, class:"mb-3 block text-base font-medium text-[#07074D]" %>
                      <%= form.text_field :price, placeholder:"New Product Price",
                                                        class:"w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" %>
                  </div>

                  <div class="my-5">
                    <%= form.label :slug, "URL", class:"mb-3 block text-base font-medium text-[#07074D]" %>
                    <div class="flex items-center w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md">
                      <span>https://gumroad.com/</span>
                      <%= form.text_field :slug, 
                        class:"outline-none focus:border-[#6A64F1] text-gray-700 font-semibold" %>
                    </div>
                  </div>
 
                  <div class="my-5">
                    <%= form.label :description, class:"mb-3 block text-base font-medium text-[#07074D]" %>
                    <%= form.rich_text_area :description %>
                  </div>

                  <div class="mb-6 pt-4">
                      <label class="mb-5 block text-xl font-semibold text-[#07074D]">
                          Upload File
                      </label>

                      <div class="mb-8">
                          <input type="file" name="file" id="file" class="sr-only" />
                          <label for="file"
                              class="relative flex min-h-[200px] items-center justify-center rounded-md border border-dashed border-[#e0e0e0] p-12 text-center">
                              <div>
                                  <span class="mb-2 block text-xl font-semibold text-[#07074D]">
                                      Drop files here
                                  </span>
                                  <span class="mb-2 block text-base font-medium text-[#6B7280]">
                                      Or
                                  </span>
                                  <span
                                      class="inline-flex rounded border border-[#e0e0e0] py-2 px-7 text-base font-medium text-[#07074D]">
                                      Browse
                                  </span>
                              </div>
                          </label>
                      </div>
                </div>
            </div>
        </div>
    </div>
      </div>
</div>
<% end %>
</div>
